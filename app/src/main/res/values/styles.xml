<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>
    <style name="GothamBoldFont">
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>

    </style>

    <style name="GothamSemiBold">
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>

    </style>

    <style name="GothamLight">
        <item name="fontFamily">@font/gotham_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>

    </style>

    <style name="RobotoRegular">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>

    </style>
    <style name="RobotoMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>

    </style>

    <style name="RobotoBold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>

    </style>

    <style name="TextInputDefault">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/inputHint</item>
        <item name="android:textColor">@color/inputText</item>
    </style>


    <style name="ButtonText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <declare-styleable name="DragLinearLayout">
        <attr name="scrollSensitiveHeight" format="dimension" />
        <attr name="placeholderView" format="reference" />
    </declare-styleable>

    <style name="AccentButton" parent="ThemeOverlay.AppCompat.Dark">

        <!-- customize colorButtonNormal for the disable color -->
        <!-- customize colorAccent for the enabled color -->
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorGrey</item>
        <item name="colorAccent">@color/colorGrey</item>
    </style>



    <style name="PopUpMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:textColor">@color/pop_menu_text</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">12sp</item>

    </style>

    <!--    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">-->
    <!--        <item name="android:windowBackground">#091C2C</item>-->
    <!--        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
    <!--        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>-->
    <!--    </style>-->


    <style name="DisableTheme" parent="AppTheme">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/button_secondary_bg</item>
        <item name="fontFamily">@font/opinion_pro_extra_light</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="NavDrawerTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
</resources>